{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "required": [
    "_version",
    "number",
    "valueArray",
    "object",
    "objectArray",
    "requiredField"
  ],
  "properties": {
    "_version": {
      "description": "The config version",
      "type": "string",
      "const": "v1"
    },
    "number": {
      "description": "A number",
      "type": "integer"
    },
    "valueArray": {
      "description": "An array of values",
      "items": {
        "type": "string"
      }
    },
    "object": {
      "description": "An object",
      "type": "object",
      "required": ["value"],
      "properties": {
        "value": {
          "description": "A number",
          "type": "number"
        }
      }
    },
    "objectArray": {
      "description": "An array of objects",
      "type": "array",
      "items": {
        "description": "An object",
        "type": "object",
        "required": ["value"],
        "properties": {
          "value": {
            "description": "A number",
            "type": "number"
          }
        }
      }
    }
  }
}
